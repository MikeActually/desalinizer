{
  "name": "desalinizer",
  "version": "1.0.0",
  "description": "he who has the most salt needs to desalinate",
  "main": "app.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node src/app.js",
    "test": "mocha 'test/**/*.test.js'",
    "coverage": "nyc mocha 'test/**/*.test.js'",
    "lint": "./node_modules/.bin/eslint --ignore-path .gitignore . --fix",
    "deploy:build": "docker build -t mikeactually/desalinizer ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MikeActually/desalinizer.git"
  },
  "author": "MikeActually",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MikeActually/desalinizer/issues"
  },
  "homepage": "https://github.com/MikeActually/desalinizer#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-chai-friendly": "^0.6.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.2.5",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1"
  },
  "dependencies": {
    "discord.js": "^12.2.0",
    "dotenv": "^8.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
